<!DOCTYPE html>
<html>
  <head>
    <title>MockupApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if current_admin %>
    Welcome <%= current_admin.name %> | <%= link_to "Logout", '/logout' %>
    <% else %>
    <%= link_to 'Login', '/login' %> | <%= link_to 'Become An Admin', '/signup' %>
    <% end %>

    <%= yield %>
  </body>
</html>
